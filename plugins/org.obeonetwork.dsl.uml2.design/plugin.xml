<plugin>
  <extension
        point="org.eclipse.sirius.componentization">
     <component
           class="org.obeonetwork.dsl.uml2.design.UMLDesignerPlugin"
           id="org.obeonetwork.dsl.uml2.design"
           name="uml2">
     </component>
  </extension>
  <extension
        point="org.eclipse.ui.newWizards">
     <wizard
           category="org.obeonetwork.dsl.uml2.design.category"
           class="org.obeonetwork.dsl.uml2.design.ui.wizards.newmodel.UmlModelWizard"
           finalPerspective="org.eclipse.sirius.ui.tools.perspective.modeling"
           icon="icons/NewUmlModel.gif"
           id="org.obeonetwork.dsl.uml2.wizard.newUmlModel"
           name="UML Model"
           preferredPerspectives="org.eclipse.sirius.ui.tools.perspective.modeling"
           project="false">
     </wizard>
     <category
           id="org.obeonetwork.dsl.uml2.design.category"
           name="%_UI_Wizard_category">
     </category>
     <wizard
           category="org.obeonetwork.dsl.uml2.design.category"
           class="org.obeonetwork.dsl.uml2.design.ui.wizards.newmodel.UMLProjectWizard"
           finalPerspective="org.eclipse.sirius.ui.tools.perspective.modeling"
           icon="icons/NewUmlModel.gif"
           id="org.obeonetwork.dsl.uml2.design.wizard1"
           name="UML Project"
           preferredPerspectives="org.eclipse.sirius.ui.tools.perspective.modeling"
           project="true">
     </wizard>
  </extension>
  
  
	   <extension point="org.eclipse.gmf.runtime.diagram.ui.editpartProviders">
	      <editpartProvider class="org.obeonetwork.dsl.uml2.design.ui.extension.editpart.UMLEditPartProvider">
	         <Priority name="High"/>
	      </editpartProvider>
	   </extension>
  
  
  
    <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.eclipse.sirius.ui.navigator.actions.uml.delete"
            name="Delete UML Element">
      </command>
        <command
            id="org.eclipse.sirius.ui.navigator.actions.uml.scenario.create"
            name="Create Scenario">
      </command>
        <command
              id="org.eclipse.sirius.ui.navigator.actions.uml.create.sequence"
              name="Create Sequence Diagram">
        </command>
        <command
              id="org.eclipse.sirius.ui.navigator.actions.uml.create.activity"
              name="Create Activity Diagram">
        </command>
        <command
              id="org.eclipse.sirius.ui.navigator.actions.uml.create.profile"
              name="Create Profile Diagram">
        </command>
        <command
              id="org.eclipse.sirius.ui.navigator.actions.uml.create.statemachine"
              name="Create State Machine Diagram">
        </command>
        <command
              id="org.obeonetwork.dsl.uml2.actions.openDashboard"
              name="Open Dashboard">
           <commandParameter
                 id="org.obeonetwork.dsl.uml2.actions.openDashboard.param.model"
                 name="model"
                 optional="true"
                 typeId="org.obeonetwork.dsl.uml2.actions.openDashboard.param.modelType">
           </commandParameter>
        </command>
        <command
              id="org.obeonetwork.dsl.uml2.actions.newUmlProject"
              name="New UML Project">
        </command>
        <command
              id="org.obeonetwork.dsl.uml2.actions.newUmlModel"
              name="New UML Model">
        </command>
        <commandParameterType
              converter="org.obeonetwork.dsl.uml2.design.ui.extension.commands.UmlElementConverter"
              id="org.obeonetwork.dsl.uml2.actions.openDashboard.param.modelType"
              type="org.eclipse.uml2.uml.Model">
        </commandParameterType>
   </extension>
  
   <extension
         point="org.eclipse.ui.handlers">
        <handler
              class="org.obeonetwork.dsl.uml2.design.ui.extension.commands.DeleteUMLElement"
              commandId="org.eclipse.sirius.ui.navigator.actions.uml.delete">
           <enabledWhen>
            <with variable="selection">
		           <iterate
                   ifEmpty="false"
                   operator="and">
		                <instanceof value="org.eclipse.uml2.uml.Element"/>
		           </iterate>
       		</with>
           </enabledWhen>
        </handler>
         <handler
              class="org.obeonetwork.dsl.uml2.design.ui.extension.commands.CreateScenario"
              commandId="org.eclipse.sirius.ui.navigator.actions.uml.scenario.create">
           <enabledWhen>
            <with variable="selection">
                 <iterate
                       ifEmpty="false"
                       operator="and">
                  <instanceof
                        value="org.eclipse.uml2.uml.Package">
                  </instanceof>
		          <test
                     forcePluginActivation="true"
                     property="org.obeonetwork.dsl.uml2.design.Design">
                  </test>
               </iterate>		           
       		</with>
           </enabledWhen>
        </handler>
         <handler
               class="org.obeonetwork.dsl.uml2.design.ui.extension.commands.CreateSequenceDiagram"
               commandId="org.eclipse.sirius.ui.navigator.actions.uml.create.sequence">
            <enabledWhen>
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <instanceof
                           value="org.eclipse.uml2.uml.Package">
                     </instanceof>
                     <test
                           forcePluginActivation="true"
                           property="org.obeonetwork.dsl.uml2.design.Design">
                     </test>
                  </iterate>
               </with>
            </enabledWhen>
         </handler>
         <handler
               class="org.obeonetwork.dsl.uml2.design.ui.extension.commands.CreateActivityDiagram"
               commandId="org.eclipse.sirius.ui.navigator.actions.uml.create.activity">
            <enabledWhen>
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <instanceof
                           value="org.eclipse.uml2.uml.Package">
                     </instanceof>
                     <test
                           forcePluginActivation="true"
                           property="org.obeonetwork.dsl.uml2.design.Design">
                     </test>
                  </iterate>
               </with>
            </enabledWhen>
         </handler>
         <handler
               class="org.obeonetwork.dsl.uml2.design.ui.extension.commands.CreateProfileDiagram"
               commandId="org.eclipse.sirius.ui.navigator.actions.uml.create.profile">
            <enabledWhen>
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <test
                           forcePluginActivation="true"
                           property="org.obeonetwork.dsl.uml2.design.Extend">
                     </test>
                     <instanceof
                           value="org.eclipse.uml2.uml.Package">
                     </instanceof>
                     <not>
                        <instanceof
                              value="org.eclipse.uml2.uml.Profile">
                        </instanceof>
                     </not>
                  </iterate>
               </with>
            </enabledWhen>
         </handler>
         <handler
               class="org.obeonetwork.dsl.uml2.design.ui.extension.commands.CreateStateMachineDiagram"
               commandId="org.eclipse.sirius.ui.navigator.actions.uml.create.statemachine">
            <enabledWhen>
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <instanceof
                           value="org.eclipse.uml2.uml.Package">
                     </instanceof>
                     <test
                           forcePluginActivation="true"
                           property="org.obeonetwork.dsl.uml2.design.Design">
                     </test>
                  </iterate>
               </with>
            </enabledWhen>
         </handler>
         <handler
               class="org.obeonetwork.dsl.uml2.design.ui.extension.commands.OpenDashboard"
               commandId="org.obeonetwork.dsl.uml2.actions.openDashboard">
            <enabledWhen>
               <reference
                     definitionId="org.obeonetwork.dsl.uml2.design.DashboardsExistDefinition">
               </reference>
            </enabledWhen>
         </handler>
         <handler
               class="org.obeonetwork.dsl.uml2.design.ui.extension.commands.NewUmlProject"
               commandId="org.obeonetwork.dsl.uml2.actions.newUmlProject">
         </handler>
         <handler
               class="org.obeonetwork.dsl.uml2.design.ui.extension.commands.NewUmlModel"
               commandId="org.obeonetwork.dsl.uml2.actions.newUmlModel">
         </handler>
   </extension>
  
  
    <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               icon="icons/deleteModel.gif"               
               label="Delete"
               commandId="org.eclipse.sirius.ui.navigator.actions.uml.delete"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:menu.viewpoint.new.representation">
         <separator
               name="org.obeonetwork.dsl.uml2.design.separator1"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.sirius.ui.navigator.actions.uml.create.sequence"
               icon="icons/SequenceDDiagram.gif"
               label="Sequence Diagram"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.sirius.ui.navigator.actions.uml.create.activity"
               icon="icons/DDiagram.gif"
               label="Activity Diagram"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.sirius.ui.navigator.actions.uml.create.profile"
               icon="icons/DDiagram.gif"
               label="Profile Diagram"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.sirius.ui.navigator.actions.uml.create.statemachine"
               icon="icons/DDiagram.gif"
               label="State Machine Diagram"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.obeonetwork.dsl.uml2.toolbar.newUmlProject"
               label="New UML Project">
            <command
                  commandId="org.obeonetwork.dsl.uml2.actions.newUmlProject"
                  icon="icons/NewUmlProject.gif"
                  label="New UML Project"
                  style="push"
                  tooltip="Create a new UML Project">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeWorkbenchWindow.activePerspective">
                     <equals
                           value="org.eclipse.sirius.ui.tools.perspective.modeling">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
         </toolbar>
         <toolbar
               id="org.obeonetwork.dsl.uml2.toolbar.newUmlModel"
               label="New UML Model">
            <command
                  commandId="org.obeonetwork.dsl.uml2.actions.newUmlModel"
                  icon="icons/NewUmlModel.gif"
                  label="New UML Model"
                  style="push"
                  tooltip="Create a new UML Model">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeWorkbenchWindow.activePerspective">
                     <equals
                           value="org.eclipse.sirius.ui.tools.perspective.modeling">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
         </toolbar>
         <toolbar
               id="org.obeonetwork.dsl.uml2.toolbar.openDashboard"
               label="Dashboard">
            <command
                  commandId="org.obeonetwork.dsl.uml2.actions.openDashboard"
                  icon="icons/Dashboard.gif"
                  label="Dashboard"
                  style="pulldown"
                  tooltip="Open UML Designer Dashboard">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeWorkbenchWindow.activePerspective">
                     <equals
                           value="org.eclipse.sirius.ui.tools.perspective.modeling">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.obeonetwork.dsl.uml2.actions.openDashboard">
         <dynamic
               class="org.obeonetwork.dsl.uml2.design.ui.extension.commands.DashboardContributionItems"
               id="org.obeonetwork.dsl.uml2.design.dynamicDashboard">
         </dynamic>
      </menuContribution>
   </extension>
    <extension
          point="org.eclipse.core.expressions.propertyTesters">
       <propertyTester
             class="org.obeonetwork.dsl.uml2.design.ui.extension.ViewpointEnablementPropertyTester"
             id="org.obeonetwork.dsl.uml2.design.ViewpointEnabled"
             namespace="org.obeonetwork.dsl.uml2.design"
             properties="Capture,Design,Review,Extend"
             type="org.eclipse.uml2.uml.Element">
       </propertyTester>
       <propertyTester
             class="org.obeonetwork.dsl.uml2.design.ui.extension.DashboardPropertyTester"
             id="org.obeonetwork.dsl.uml2.design.DashboardsExist"
             namespace="org.obeonetwork.dsl.uml2.design"
             properties="dashboardsExist"
             type="java.lang.Object">
       </propertyTester>
    </extension>
    <extension
          point="org.eclipse.ui.perspectiveExtensions">
       <perspectiveExtension
             targetID="org.eclipse.sirius.ui.tools.perspective.modeling">
          <newWizardShortcut
                id="org.obeonetwork.dsl.uml2.wizard.newUmlModel">
          </newWizardShortcut>
          <newWizardShortcut
                id="org.obeonetwork.dsl.uml2.design.wizard1">
          </newWizardShortcut>
       </perspectiveExtension>
    </extension>

   <extension
         id="org.obeonetwork.dsl.uml2.design.ui.extension.rotableNode.requiredInterface"
         point="org.obeonetwork.gmf.runtime.diagram.ui.extension.rotatableNode">
      <image
            bottom="/org.obeonetwork.dsl.uml2.design/images/required-bottom.svg"
            id="org.obeonetwork.dsl.uml2.design.ui.extension.rotableNode.requiredInterface"
            left="/org.obeonetwork.dsl.uml2.design/images/required-left.svg"
            right="/org.obeonetwork.dsl.uml2.design/images/required-right.svg"
            top="/org.obeonetwork.dsl.uml2.design/images/required-top.svg">
      </image>
   </extension>
   <extension point="org.eclipse.ui.popupMenus" id="init-diagram-action">
      <?gmfgen generated="true"?>
      <objectContribution
            id="org.obeonetwork.dsl.uml2.design.action.InitDiagramOnUml"
            nameFilter="*.uml"
            objectClass="org.eclipse.core.resources.IFile">
         <action
               label="%initDiagramActionLabel"
               class="org.obeonetwork.dsl.uml2.design.ui.extension.actions.UmlInitDiagramFileAction"
               menubarPath="additions"
               enablesFor="1"
               id="org.obeonetwork.dsl.uml2.diagram.InitDiagramAction">
         </action>
      </objectContribution>
      <objectContribution
            id="org.obeonetwork.dsl.uml2.design.action.InitDiagramOnAird"
            nameFilter="*.aird"
            objectClass="org.eclipse.core.resources.IFile">
         <action
               class="org.obeonetwork.dsl.uml2.design.ui.extension.actions.UmlInitDiagramFileAction"
               enablesFor="1"
               id="org.obeonetwork.dsl.uml2.diagram.InitDiagramAction"
               label="%initDiagramActionLabel"
               menubarPath="additions">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="org.obeonetwork.dsl.uml2.design.DashboardsExistDefinition">
         <test
               forcePluginActivation="true"
               property="org.obeonetwork.dsl.uml2.design.dashboardsExist">
         </test>
      </definition>
   </extension>
   <extension
        point="org.eclipse.emf.validation.constraintProviders">
     <category
           id="org.obeonetwork.dsl.uml2.profile.design.constraint.stereotype.extension"
           name="Stereotype extension constraint">
     </category>
     <constraintProvider
           cache="true">
        <package
              namespaceUri="http://www.eclipse.org/uml2/5.0.0/UML">
        </package>
        <constraints
              categories="http://www.eclipse.org/uml2/5.0.0/UML/Stereotype">
           <constraint
                 class="org.obeonetwork.dsl.uml2.profile.design.constraints.CheckStereotypeExtension"
                 id="org.obeonetwork.dsl.uml2.profile.design.stereotype.constraint1"
                 isEnabledByDefault="true"
                 lang="Java"
                 mode="Batch"
                 name="No extension for the Stereotype"
                 severity="WARNING"
                 statusCode="1">
              <message>
                 The stereotype {0} must extend a meta class or another stereotype
              </message>
              <description>
                 All Stereotypes, should extend a meta class or another stereotype
              </description>
              <target
                    class="Stereotype">
              </target>
           </constraint>
        </constraints>
     </constraintProvider>
  </extension>
   <extension
         point="org.eclipse.sirius.sessionManagerListener">
      <listener
            class="org.obeonetwork.dsl.uml2.design.UmlDesignerSessionManagerListener">
      </listener>
      <listener
            class="org.obeonetwork.dsl.uml2.design.OpenHelpContextListener">
      </listener>
   </extension>
</plugin>
