<plugin>
  <extension
    point="org.eclipse.ui.handlers">
    <handler
        class="org.obeonetwork.dsl.uml2.dashboard.commands.OpenDashboard"
        commandId="org.obeonetwork.dsl.uml2.actions.openDashboard">
            <enabledWhen>
               <reference
                     definitionId="org.obeonetwork.dsl.uml2.design.UMLViewpointEnabledDefinition">
               </reference>
            </enabledWhen>
         </handler>
   </extension>
  <extension
    point="org.eclipse.ui.commands">
       <command
              id="org.obeonetwork.dsl.uml2.actions.openDashboard"
              name="%command.name">
           <commandParameter
                 id="org.obeonetwork.dsl.uml2.actions.openDashboard.param.model"
                 name="project"
                 optional="true"
                 typeId="org.obeonetwork.dsl.uml2.actions.openDashboard.param.modelType">
           </commandParameter>
        </command>
        <commandParameterType
              converter="org.obeonetwork.dsl.uml2.dashboard.commands.IProjectConverter"
              id="org.obeonetwork.dsl.uml2.actions.openDashboard.param.modelType"
              type="org.eclipse.core.resources.IProject">
        </commandParameterType>
   </extension>
  <extension
    point="org.eclipse.ui.menus">
    <menuContribution
        locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
        <toolbar
            id="org.obeonetwork.dsl.uml2.toolbar.openDashboard"
            label="%toolbar.label">
            <command
                commandId="org.obeonetwork.dsl.uml2.actions.openDashboard"
                icon="icons/Dashboard.gif"
                label="%command.label"
                style="pulldown"
                tooltip="%command.tooltip">
                <visibleWhen
                    checkEnabled="false">
                    <with
                        variable="activeWorkbenchWindow.activePerspective">
                        <equals
                              value="org.eclipse.sirius.ui.tools.perspective.modeling">
                        </equals>
                    </with>
                </visibleWhen>
            </command>
        </toolbar>
    </menuContribution>
    <menuContribution
        allPopups="false"
        locationURI="menu:org.obeonetwork.dsl.uml2.actions.openDashboard">
        <dynamic
            class="org.obeonetwork.dsl.uml2.dashboard.commands.DashboardContributionItems"
            id="org.obeonetwork.dsl.uml2.design.dynamicDashboard">
        </dynamic>
    </menuContribution>
   </extension>
  <extension
    point="org.eclipse.core.expressions.propertyTesters">
    <propertyTester
        class="org.obeonetwork.dsl.uml2.dashboard.testers.UMLViewpointEnablementPropertyTester"
        id="org.obeonetwork.dsl.uml2.design.UMLViewpointEnabled"
        namespace="org.obeonetwork.dsl.uml2.design"
        properties="UmlViewpointEnabled"
        type="java.lang.Object">
    </propertyTester>
  </extension>
