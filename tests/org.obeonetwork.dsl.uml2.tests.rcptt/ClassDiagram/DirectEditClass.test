------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

// Activate Direct Edit for a class name
get-editor Entities | get-diagram -index 1 | get-edit-part -name Entities | get-edit-part -name Agency 
    | get-edit-part -className DNodeListNameEditPart | activate-direct-edit

// Change Class name
with [get-editor Entities] {
    with [get-editbox] {
        set-text MyAgency
    }
    with [get-diagram -index 1] {
        commit-direct-edit
    }
}

// Verify figure name was changed
get-editor Entities | get-diagram -index 1 | get-edit-part -name Entities | get-edit-part -name MyAgency 
    | get-edit-part -className DNodeListNameEditPart | get-property "getFigure().getText()" | equals MyAgency 
    | verify-true
    
// Verify Model is updated
get-editor Entities | get-diagram -index 1 | get-edit-part -name Entities | get-edit-part -name MyAgency 
    | get-edit-part -className DNodeListNameEditPart | get-property "element.target.name" | equals MyAgency 
    | verify-true
