// Move Redefined target from Port1 to Port2
with [get-editor "NewModel Component Diagram"] {
    with [get-diagram -index 1 | get-edit-part -name "NewModel Component Diagram"] {
        with [get-edit-part -name Component2 | get-edit-part -name port1 | get-target-connection 0] {
            mouse-move 68 15 button1 -height 33 -width 110
            mouse-press 68 15 button1 -height 33 -width 110
            mouse-release 70 16 button1 524288 -height 35 -width 114
            with [get-handle SiriusConnectionEndPointHandle -index 1] {
                mouse-move 5 4 button1 -height 7 -width 7
                mouse-press 5 4 button1 -height 7 -width 7
            }
        }
        mouse-drag 271 74 button1 524288 -height 524 -width 657
        mouse-release 271 74 button1 524288 -height 524 -width 657
    }
}

// Check diagram and model are changed
get-editor "NewModel Component Diagram" | get-diagram -index 1 | get-edit-part -name "NewModel Component Diagram" 
    | get-edit-part -name Component2 | get-edit-part -name port1 | verify-error{get-target-connection 0}
    
with [get-editor "NewModel Component Diagram" | get-diagram -index 1 | get-edit-part -name "NewModel Component Diagram" 
    | get-edit-part -name Component2 | get-edit-part -name port2 | get-target-connection 0] {
    get-property "source.element.target.qualifiedName" | equals "NewModel::Component1::port1" | verify-true
    get-property "target.element.target.qualifiedName" | equals "NewModel::Component2::port2" | verify-true
}
