// Move target from Component2 to Component3
with [get-editor "NewModel Component Diagram"] {
    with [get-diagram -index 1 | get-edit-part -name "NewModel Component Diagram"] {
        mouse-move 243 81 -height 524 -width 657
        with [get-edit-part -name Component2 | get-target-connection 0 | get-handle SiriusConnectionEndPointHandle 
            -index 1] {
            mouse-move 5 4 button1 -height 7 -width 7
            mouse-press 5 4 button1 -height 7 -width 7
            mouse-move 6 4 -mask 524288 -height 7 -width 7
        }
        mouse-drag 557 75 button1 524288 -height 524 -width 657
        mouse-release 557 75 button1 524288 -height 524 -width 657
    }
    get-diagram -index 1 | get-edit-part -name "NewModel Component Diagram" | mouse-move 34 432 -height 524 -width 657
}

// Check diagram and model
get-editor "NewModel Component Diagram" | get-diagram -index 1 | get-edit-part -name "NewModel Component Diagram" 
    | get-edit-part -name Component2 | verify-error{get-target-connection 0}
with [get-editor "NewModel Component Diagram" | get-diagram -index 1 | get-edit-part -name "NewModel Component Diagram" 
    | get-edit-part -name Component3 | get-target-connection 0] {
    get-property visible | equals true | verify-true
    get-property "source.element.name" | equals Component1 | verify-true
    get-property "target.element.name" | equals Component3 | verify-true
    get-property "getFigure().isVisible()" | equals true | verify-true
}
